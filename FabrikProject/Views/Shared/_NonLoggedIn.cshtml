@using FabrikProject.Models
@model LoginViewModel
<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "navbar-form navbar-right", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => Model.Email)
            <br />
            @Html.TextBoxFor(m => Model.Email, new { @class = "form-control", placeholder = "Email" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => Model.Password)
            <br />
            @Html.PasswordFor(m => Model.Password, new { @class = "form-control", placeholder = "Password" })
            <input type="submit" value="Log in" class="btn btn-default" />

        </div>
        <br />
        <a href="#" style="float:right;">Forgot Password?</a>

    }
</section>
