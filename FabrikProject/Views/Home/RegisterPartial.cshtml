@model FabrikProject.Models.RegisterViewModel


<div class="row" >
    <div class="col-md-6 div-custom">
        <h1 style="text-align:center;">Welcome to the</h1>
        <h1><b><i>Essential Portfolio Manager</i></b></h1>
        <div>
            <img src="~/Content/Images/logo.svg" style="height:314px;width:439px;" alt="Logo" />
        </div>
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h1>Sign Up</h1>
            <h4>Start creating and tracking your portfolio</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">

                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-lg", placeholder = "First Name" })
                </div>
                <div class="col-md-6">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-lg", placeholder = "Last Name" })
                </div>
            </div>
            
            <div class="form-group">
               
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg signup-input", placeholder="Email" })
                </div>
            </div>
            <div class="form-group">
                
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg signup-input", placeholder="Password"})
                </div>
            </div>
            <div class="form-group">
              
                <div class="col-md-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg signup-input", placeholder="Confirm Password" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-success btn-lg signup-button" value="Register" />
                </div>
            </div>
        }
    </div>
</div>


